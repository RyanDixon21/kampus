        },
        startAutoplay() {
            this.autoplay = setInterval(() => {
                this.nextSlide();
            }, 5000);
        },
        stopAutoplay() {
            clearInterval(this.autoplay);
        },
        nextSlide() {
            this.currentSlide = (this.currentSlide + 1) % this.slides;
        },
        prevSlide() {
            this.currentSlide = (this.currentSlide - 1 + this.slides) % this.slides;
        },
        goToSlide(index) {
            this.currentSlide = index;
            this.stopAutoplay();
            this.startAutoplay();
        }
